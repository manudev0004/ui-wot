{
  "@context": "https://www.w3.org/2019/wot/td/v1",
  "title": "Smart Home Hub",
  "id": "urn:smart-home-hub",
  "description": "A comprehensive smart home control hub with multiple devices",
  "security": ["nosec_sc"],
  "securityDefinitions": {
    "nosec_sc": {
      "scheme": "nosec"
    }
  },
  "properties": {
    "temperature": {
      "type": "number",
      "description": "Current temperature",
      "minimum": -40,
      "maximum": 60,
      "unit": "celsius",
      "readOnly": true,
      "forms": [{
        "href": "http://localhost:8080/temperature",
        "op": "readproperty"
      }]
    },
    "humidity": {
      "type": "number",
      "description": "Current humidity percentage",
      "minimum": 0,
      "maximum": 100,
      "unit": "percent",
      "readOnly": true,
      "forms": [{
        "href": "http://localhost:8080/humidity",
        "op": "readproperty"
      }]
    },
    "brightness": {
      "type": "number",
      "description": "Light brightness level",
      "minimum": 0,
      "maximum": 100,
      "unit": "percent",
      "forms": [{
        "href": "http://localhost:8080/brightness",
        "op": ["readproperty", "writeproperty"]
      }]
    },
    "power": {
      "type": "boolean",
      "description": "Power state of the device",
      "forms": [{
        "href": "http://localhost:8080/power",
        "op": ["readproperty", "writeproperty"]
      }]
    },
    "volume": {
      "type": "number",
      "description": "Audio volume level",
      "minimum": 0,
      "maximum": 100,
      "unit": "percent",
      "forms": [{
        "href": "http://localhost:8080/volume",
        "op": ["readproperty", "writeproperty"]
      }]
    }
  },
  "actions": {
    "togglePower": {
      "description": "Toggle the power state",
      "input": {
        "type": "boolean"
      },
      "forms": [{
        "href": "http://localhost:8080/actions/togglePower",
        "op": "invokeaction"
      }]
    },
    "setBrightness": {
      "description": "Set the brightness level",
      "input": {
        "type": "number",
        "minimum": 0,
        "maximum": 100
      },
      "forms": [{
        "href": "http://localhost:8080/actions/setBrightness",
        "op": "invokeaction"
      }]
    },
    "playMusic": {
      "description": "Start playing music",
      "forms": [{
        "href": "http://localhost:8080/actions/playMusic",
        "op": "invokeaction"
      }]
    }
  },
  "events": {
    "motionDetected": {
      "description": "Motion sensor triggered",
      "data": {
        "type": "object",
        "properties": {
          "timestamp": {
            "type": "string"
          },
          "location": {
            "type": "string"
          }
        }
      },
      "forms": [{
        "href": "http://localhost:8080/events/motionDetected",
        "op": "subscribeevent"
      }]
    },
    "temperatureAlert": {
      "description": "Temperature threshold exceeded",
      "data": {
        "type": "object",
        "properties": {
          "temperature": {
            "type": "number"
          },
          "threshold": {
            "type": "number"
          }
        }
      },
      "forms": [{
        "href": "http://localhost:8080/events/temperatureAlert",
        "op": "subscribeevent"
      }]
    }
  }
}
