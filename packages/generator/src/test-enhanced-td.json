{
  "@context": [
    "https://www.w3.org/2019/wot/td/v1",
    {
      "@language": "en"
    }
  ],
  "@type": "Thing",
  "id": "urn:test:enhanced-device",
  "title": "Enhanced Test Device",
  "description": "A test device to showcase enhanced component mapping",
  "securityDefinitions": {
    "nosec_sc": {
      "scheme": "nosec"
    }
  },
  "security": "nosec_sc",
  "properties": {
    "power": {
      "type": "boolean",
      "title": "Device Power",
      "description": "Turn the device on or off",
      "readOnly": false
    },
    "brightness": {
      "type": "number",
      "title": "Brightness Level",
      "description": "Control brightness from 0 to 100",
      "minimum": 0,
      "maximum": 100,
      "readOnly": false
    },
    "volume": {
      "type": "integer",
      "title": "Audio Volume",
      "description": "Control volume level",
      "minimum": 0,
      "maximum": 20,
      "readOnly": false
    },
    "temperature": {
      "type": "number",
      "title": "Temperature Reading",
      "description": "Current temperature sensor reading",
      "minimum": -40,
      "maximum": 120,
      "unit": "degree celsius",
      "readOnly": true
    },
    "deviceName": {
      "type": "string",
      "title": "Device Name",
      "description": "Customizable device name",
      "maxLength": 50,
      "readOnly": false
    },
    "schedule": {
      "type": "string",
      "format": "date-time",
      "title": "Scheduled Time",
      "description": "Set a scheduled time for the device",
      "readOnly": false
    },
    "themeColor": {
      "type": "string",
      "format": "color",
      "title": "Theme Color",
      "description": "Choose device theme color",
      "readOnly": false
    },
    "mode": {
      "type": "string",
      "title": "Operation Mode",
      "description": "Current operation mode",
      "enum": ["auto", "manual", "eco", "performance"],
      "readOnly": false
    },
    "connected": {
      "type": "boolean",
      "title": "Connection Status",
      "description": "Whether device is connected",
      "readOnly": true
    }
  },
  "actions": {
    "reset": {
      "title": "Reset Device",
      "description": "Reset device to factory defaults"
    },
    "uploadFirmware": {
      "title": "Upload Firmware",
      "description": "Upload new firmware file",
      "input": {
        "type": "object",
        "properties": {
          "file": {
            "type": "string",
            "contentMediaType": "application/octet-stream"
          }
        }
      }
    }
  },
  "events": {
    "alert": {
      "title": "Device Alert",
      "description": "Fired when device needs attention",
      "data": {
        "type": "object",
        "properties": {
          "severity": {
            "type": "string",
            "enum": ["low", "medium", "high"]
          },
          "message": {
            "type": "string"
          }
        }
      }
    }
  }
}
