{
  "@context": "https://www.w3.org/2019/wot/td/v1",
  "id": "urn:dev:ops:my-lamp-1234",
  "title": "MyLampThing",
  "description": "A simple smart lamp example",
  "securityDefinitions": {
    "nosec_sc": {
      "scheme": "nosec"
    }
  },
  "security": [
    "nosec_sc"
  ],
  "properties": {
    "status": {
      "type": "boolean",
      "title": "On/Off Status",
      "description": "Current on/off status of the lamp",
      "forms": [
        {
          "href": "https://mylamp.example.com/status",
          "contentType": "application/json"
        }
      ]
    },
    "brightness": {
      "type": "integer",
      "title": "Brightness Level",
      "description": "Current brightness level (0-100)",
      "minimum": 0,
      "maximum": 100,
      "forms": [
        {
          "href": "https://mylamp.example.com/brightness",
          "contentType": "application/json"
        }
      ]
    },
    "color": {
      "type": "string",
      "title": "Color",
      "description": "Current color of the lamp",
      "forms": [
        {
          "href": "https://mylamp.example.com/color",
          "contentType": "application/json"
        }
      ]
    },
    "temperature": {
      "type": "number",
      "title": "Temperature",
      "description": "Current temperature reading from lamp sensor",
      "unit": "celsius",
      "minimum": -40,
      "maximum": 80,
      "readOnly": true,
      "forms": [
        {
          "href": "https://mylamp.example.com/temperature",
          "contentType": "application/json"
        }
      ]
    }
  },
  "actions": {
    "toggle": {
      "title": "Toggle",
      "description": "Toggle the lamp on/off",
      "forms": [
        {
          "href": "https://mylamp.example.com/toggle",
          "contentType": "application/json"
        }
      ]
    },
    "fadeIn": {
      "title": "Fade In",
      "description": "Gradually increase brightness",
      "input": {
        "type": "object",
        "properties": {
          "duration": {
            "type": "integer",
            "description": "Duration in milliseconds",
            "minimum": 0
          }
        }
      },
      "forms": [
        {
          "href": "https://mylamp.example.com/fadeIn",
          "contentType": "application/json"
        }
      ]
    }
  },
  "events": {
    "overheating": {
      "title": "Overheating Alert",
      "description": "Lamp is overheating",
      "data": {
        "type": "object",
        "properties": {
          "temperature": {
            "type": "number"
          },
          "timestamp": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "forms": [
        {
          "href": "https://mylamp.example.com/events/overheating",
          "contentType": "application/json"
        }
      ]
    }
  }
}
