{
  "@context": [
    "https://www.w3.org/2019/wot/td/v1",
    {
      "@language": "en"
    }
  ],
  "@type": "Thing",
  "id": "urn:smart-home:devices:living-room-lights",
  "title": "Smart Living Room Lights",
  "description": "A group of smart LED lights in the living room with dimming, color control, and scheduling features",
  "base": "http://192.168.1.100:8080/",
  "security": ["nosec_sc"],
  "securityDefinitions": {
    "nosec_sc": {
      "scheme": "nosec"
    }
  },
  "properties": {
    "power": {
      "title": "Power State",
      "description": "Current power state of the lights",
      "type": "boolean",
      "readOnly": false,
      "observable": true,
      "forms": [
        {
          "href": "/properties/power",
          "op": ["readproperty", "writeproperty", "observeproperty"]
        }
      ]
    },
    "brightness": {
      "title": "Brightness Level",
      "description": "Current brightness level (0-100%)",
      "type": "integer",
      "minimum": 0,
      "maximum": 100,
      "unit": "%",
      "readOnly": false,
      "observable": true,
      "forms": [
        {
          "href": "/properties/brightness",
          "op": ["readproperty", "writeproperty", "observeproperty"]
        }
      ]
    },
    "color": {
      "title": "Color",
      "description": "Current color in RGB format",
      "type": "object",
      "properties": {
        "r": { "type": "integer", "minimum": 0, "maximum": 255 },
        "g": { "type": "integer", "minimum": 0, "maximum": 255 },
        "b": { "type": "integer", "minimum": 0, "maximum": 255 }
      },
      "readOnly": false,
      "observable": true,
      "forms": [
        {
          "href": "/properties/color",
          "op": ["readproperty", "writeproperty", "observeproperty"]
        }
      ]
    },
    "temperature": {
      "title": "Color Temperature",
      "description": "Color temperature in Kelvin",
      "type": "integer",
      "minimum": 2700,
      "maximum": 6500,
      "unit": "K",
      "readOnly": false,
      "observable": true,
      "forms": [
        {
          "href": "/properties/temperature",
          "op": ["readproperty", "writeproperty", "observeproperty"]
        }
      ]
    },
    "energy": {
      "title": "Energy Consumption",
      "description": "Current energy consumption in watts",
      "type": "number",
      "minimum": 0,
      "unit": "W",
      "readOnly": true,
      "observable": true,
      "forms": [
        {
          "href": "/properties/energy",
          "op": ["readproperty", "observeproperty"]
        }
      ]
    }
  },
  "actions": {
    "toggle": {
      "title": "Toggle Power",
      "description": "Toggle the power state of the lights",
      "forms": [
        {
          "href": "/actions/toggle",
          "op": "invokeaction"
        }
      ]
    },
    "dim": {
      "title": "Dim to Level",
      "description": "Smoothly dim lights to specified brightness level",
      "input": {
        "type": "object",
        "properties": {
          "level": {
            "type": "integer",
            "minimum": 0,
            "maximum": 100,
            "description": "Target brightness level (0-100%)"
          },
          "duration": {
            "type": "integer",
            "minimum": 0,
            "maximum": 10000,
            "default": 1000,
            "description": "Transition duration in milliseconds"
          }
        },
        "required": ["level"]
      },
      "forms": [
        {
          "href": "/actions/dim",
          "op": "invokeaction"
        }
      ]
    },
    "schedule": {
      "title": "Schedule On/Off",
      "description": "Schedule the lights to turn on or off at a specific time",
      "input": {
        "type": "object",
        "properties": {
          "time": {
            "type": "string",
            "format": "time",
            "description": "Time to execute the action (HH:MM format)"
          },
          "action": {
            "type": "string",
            "enum": ["on", "off"],
            "description": "Action to perform"
          },
          "brightness": {
            "type": "integer",
            "minimum": 0,
            "maximum": 100,
            "default": 100,
            "description": "Brightness level if turning on"
          }
        },
        "required": ["time", "action"]
      },
      "forms": [
        {
          "href": "/actions/schedule",
          "op": "invokeaction"
        }
      ]
    }
  },
  "events": {
    "powerChanged": {
      "title": "Power State Changed",
      "description": "Emitted when the power state changes",
      "data": {
        "type": "object",
        "properties": {
          "power": { "type": "boolean" },
          "timestamp": { "type": "string", "format": "date-time" }
        }
      },
      "forms": [
        {
          "href": "/events/powerChanged",
          "op": "subscribeevent"
        }
      ]
    },
    "brightnessChanged": {
      "title": "Brightness Changed",
      "description": "Emitted when brightness level changes",
      "data": {
        "type": "object",
        "properties": {
          "brightness": { "type": "integer", "minimum": 0, "maximum": 100 },
          "timestamp": { "type": "string", "format": "date-time" }
        }
      },
      "forms": [
        {
          "href": "/events/brightnessChanged",
          "op": "subscribeevent"
        }
      ]
    },
    "motionDetected": {
      "title": "Motion Detected",
      "description": "Emitted when motion is detected in the room",
      "data": {
        "type": "object",
        "properties": {
          "motion": { "type": "boolean" },
          "timestamp": { "type": "string", "format": "date-time" },
          "location": { "type": "string", "description": "Area where motion was detected" }
        }
      },
      "forms": [
        {
          "href": "/events/motionDetected",
          "op": "subscribeevent"
        }
      ]
    }
  }
}
